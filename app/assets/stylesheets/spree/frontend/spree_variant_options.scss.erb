#product-variants {
    ul {
        list-style-type:none;
        padding: 0;
    }

    li {
        display: inline-block;
    }

    .list-group li {
        padding: 4px;
    }

    label {
        cursor: pointer;
    }
}

ul.variant-option-values {
    .unavailable, .out-of-stock {
        opacity: .35;
        cursor: default;
    }

    &.error {
        a.option-value.in-stock {
            border: 1px solid red;
            color: red;
        }
    }

}
